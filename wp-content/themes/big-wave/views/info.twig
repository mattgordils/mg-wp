{% extends "base.twig" %}
{% set body_class = 'info-page' %}

{% block content %}
	{% include 'components/top-area.twig' %}

	{% if post.blocks %}
		{% for block in post.get_field('blocks') %}
			{% if block.acf_fc_layout == 'image_text' %}
				{% include 'components/flexible-content/image-text.twig' %}
			{% elseif block.acf_fc_layout == 'list' %}
				{% include 'components/flexible-content/list.twig' %}
			{% elseif block.acf_fc_layout == 'callout' %}
				{% include 'components/flexible-content/callout.twig' %}
			{% endif %}		
		{% endfor %}
	{% endif %}		


{% endblock %}{# end content #}