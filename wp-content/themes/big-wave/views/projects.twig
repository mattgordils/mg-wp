{% extends "base.twig" %}
{% set body_class = 'projects-page' %}

{% block content %}

	<section>
		<div class="container no-bottom-space">
			<div class="inline-grid project-grid v-md-spaced">
				{% for project in post.get_field('projects') %}

					{% if project.size == 'third' %}
						{% set layout = 'col-4' %}
					{% elseif project.size == 'half' %}
						{% set layout = 'col-6' %}
					{% elseif project.size == 'two_thirds' %}
						{% set layout = 'col-8' %}
					{% elseif project.size == 'full_width' %}
						{% set layout = 'col-12' %}
					{% endif %}

					<div class="{{ layout }}">
						{% include 'components/project-thumb.twig' with { 
							'item' : project.project, 
							'layout' : layout 
						} %}
					</div>

				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}{# end content #}