{% extends "base.twig" %}
{% set body_class = 'project-page' %}
{% set page_title = post.title %}
{% set secondary_text = post.terms | join(', ') %}

{% block content %}

	<section class="project-images">
		<div class="container">
			<div class="inline-grid v-spaced middle">
				{% for block in post.get_field('project_images') %}

					{% if block.image_layout == 'half' %}
						<div class="col-6">
					{% elseif block.image_layout == 'third' %}
						<div class="col-4">
					{% elseif block.image_layout == 'two-thirds' %}
						<div class="col-8">
					{% elseif block.image_layout == 'quarter' %}
						<div class="col-3">
					{% else %}
						<div class="col-12">
					{% endif %}
						{% include 'components/flexible-content/project-image.twig' with {
							'media' : block.media_type,
							'style' : block.device_or_bg,
							'gutter' : block.gutter,
							'background_color' : post.background_color
						} %}
					</div>

				{% endfor %}

				<div class="col-12">
					<div class="float-grid v-spaced">
						<div class="col-6">
							<div class="max-width">
							</div>
						</div>
						<div class="col-6">
							<div class="max-width rich-text large-font-size wide-space-before space-after">
								{{ post.content }}
							</div>
							<div>
								<p class="light-text-color"><span class="label">Disciplines</span> {{ post.terms | join(', ') }}</p>
								{% for credit in post.get_field('credits') %}
									<p class="light-text-color"><span class="label">{{ credit.label }}</span> {{ credit.name }} {{ credit.contributor_link }}</p>
								{% endfor %}
								{% if post.get_field('project_link') %}
									<p>
										<a href="{{ post.get_field('project_link') }}" target="_blank">{{ post.get_field('project_link') }}</a>
									</p>
								{% endif %}
							</div>
						</div>
					</div>
				</div>

				<!-- <div class="col-12">
					<section class="dark project-info-block">
						<div class="container max-p-width rich-text">
							<div>
								<div class="large-font-size">
									{{ post.content }}
								</div>
							</div>
						</div>
					</section>
				</div> -->

			</div>
		</div>
	</section>

	<section>
		<div class="container no-top-space no-bottom-space">
			<!-- <hr> -->
			<div class="float-grid v-spaced break-lg">
				
				<div class="col-6"><h3 class="large-font-size">More Projects</h3></div>
				<div class="col-6">
					<div class="inline-grid more-projects-grid v-spaced no-break tight-gutter">
						{% for project in projects|slice(0, 4) %}
							<div class="col">
								{% include 'components/project-thumb.twig' with { 
									'item' : project,
									'layout' : layout,
									'hide_info' : false
								} %}
							</div>
						{% endfor %}
						<div class="col-12 align-left">
							<a href="/portfolio" class="transition-link light-text-color underlined large-font-size">All Work</a>
						</div>
					</div>
				</div>

			</div>
		</div>
	</section>

{% endblock %}{# end content #}