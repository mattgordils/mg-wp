{% extends "base.twig" %}
{% set body_class = 'service-page' %}
{% set term = TimberTerm(tax_id) %}
{% set page_title = term ~ ' Projects' %}
{% set secondary_text = term.description %}

{% block content %}

	<section class="no-top-space">
		<div class="container">
			<div class="inline-grid project-grid no-break v-wide-spaced center">
				{% for project in term.get_posts('numberposts=5') %}

					{% if project.size == 'third' %}
						{% set layout = 'col-4' %}
					{% elseif project.size == 'half' %}
						{% set layout = 'col-6' %}
					{% elseif project.size == 'two_thirds' %}
						{% set layout = 'col-8' %}
					{% elseif project.size == 'full_width' %}
						{% set layout = 'col-12' %}
					{% endif %}

					<!-- <div class="{{ layout }}"> -->
					<div class="col">
						{% include 'components/project-thumb.twig' with { 
							'item' : project,
							'layout' : layout
						} %}
					</div>

				{% endfor %}
			</div>
		</div>
	</section>

	<section>
		<div class="container align-center">
			<a href="/work" class="header-style transition-link">All Work</a>
		</div>
	</section>

{% endblock %}{# end content #}